{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node"],
    "typeRoots": [
      "../../client/node_modules/@types",
      "../node_modules/@types",
      "../../node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "hardhat": ["../../client/node_modules/hardhat"],
      "hardhat/*": ["../../client/node_modules/hardhat/*"]
    }
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
